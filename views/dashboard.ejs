    <!-- Photo File Upload Modal End -->

    <!-- Photo Edit Modal Start -->
    <div id="photo-edit-modal" class="modal">
        <form action="/gallery/edit" id="editForm" method="POST" autocomplete="off" >
            <h3 class="title">Edit Photo <span id="close-edit">X</span></h3>
            <input type="hidden" id="editId" name="editId">
            <div class="form-controller ">
                <label for="description">Description</label>
                <input type="text" id="editDesc" name="editDescription" placeholder="Type your description" />
                <div id="description" class="error"></div>
            </div>
            <div class="form-controller ">
                <label for="tag">Tags</label>
                <input type="text" id="editTags" name="editTags" id="tag" placeholder="#Type #your #tags" />
                <div id="tags"></div>
                <div id="err"></div>
                <div id="tagsError" class="error"></div>
            </div>
            <input type="submit" value="Submit" />
        </form>
    </div>
    <!-- Photo Edit Modal End -->

    <!-- Profile Photo Upload Modal Start -->
    <div id="profilePhotoModal" class="modal">
        <form action="/gallery/pp" method="POST" autocomplete="off" enctype="multipart/form-data" >
            <h3 class="title">Upload Profile Photo <span id="profilePhotoClose">X</span></h3>
            <div class="form-controller ">
                <label for="image">File</label>
                <input type="file" name="image" placeholder="Select your file" id="pp" />
                <img id="ppPreview" style="display: none;" src="" alt="photo preview" />
                <div id="image" class="error"></div>
            </div>
            <input type="submit" value="Submit" />
        </form>
    </div>
