<body>
    <%- include('partials/header.ejs') %> 
    <main>
        <div class="board">
            <div class="user-image" id="userImg">
                <% if(profilePhoto){ %>
                    <img src="<%= profilePhoto.url %>" alt="<%= user.username %> profile photo">
                    <div class="screen-or-delete">
                        <a id="ppFull" data-url="<%= profilePhoto.url %>" data-name="<%= user.username %>">Full Screen</a>
                        <a id="ppDelete" data-href="/gallery/<%= profilePhoto._id %>?_method=DELETE">Delete Photo</a>
                    </div>
                <% } else { %>
                    <img src="/images/emptyUser.png" id="ppUpload">
                <% } %>
            </div>
            <div class="info-container">
                <h1><%= user.username %></h1>
                <div class="user-info">
                    <p>
                        <% if (user.description) { %>
                            <% if(user.description.length > 400) { %>
                                <%= user.description.substring(0,400)+"..."  %>
                            <% } else { %>
                                <%= user.description  %>
                            <% } %>
                        <% } else { %>
                            People wonder you. Tell them something about you. 
                        <% } %>
