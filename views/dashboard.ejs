    <div id="settingsModal">
        <div class="settings-title">Settings</div>
        <div class="settings-items">
            <a>Biography</a>
            <a>Change Password</a>
            <a>Delete Account</a>
        </div>
    </div>
    <!-- Settings Modal End -->

    <!-- Biography Modal Start -->
    <div id="biographyModal" class="biography-modal modal">
        <form action="dashboard/desc" method="POST">
            <div class="bio-container">
                <div class="bio-title">
                    Biography
                    <span class="close-bio-modal">X</span>
                </div>
                <div class="bio-content">
                    <textarea name="description" id="" cols="60" rows="8" placeholder="Type your biography"><% if (user.description) { %><% if(user.description.length > 400) { %><%= user.description.substring(0,400)+"..."  %><% } else { %><%= user.description  %><% } %><% } else { %>People wonder you. Tell them something about you.<% } %></textarea>
                </div>
                <div class="update-cancel">
                    <button type="submit">Update</button>
                </div>
            </div>
        </form>
    </div>
