                                <div class="info-title"><%= photo.owner.username %></div>
                                <div class="content">
                                    <% if(photo.description && photo.description.length > 250) { %> 
                                        <%= photo.description.substring(0,250)+"..." %>
                                    <% }else { %>
                                        <%= photo.description %>
                                    <% } %>
                                </div>
                                <div class="tag-container">
                                    <% for(let tag of photo.tags) { %>
                                        <div class="tag"><a href="/gallery/tags?tag=<%= tag.split('#')[1] %>"><%= tag %></a></div>
                                    <% } %>
                                </div>
                                <div class="visit">
                                    <a class="full-screen getfullScreen" data-url="<%= photo.url %>" data-name="<%= user.username %>" >Full Screen</a>
                                    <a 
                                        class="edit"
                                        data-edit-photo-id = "<%= photo._id %>"
                                        data-edit-photo-owner-id = "<%= photo.owner._id %>"
                                        data-edit-description="<%= photo.description %>"
                                        data-edit-tags="<%= photo.tags %>"
                                    >Edit</a>
                                    <a class="full-screen delete-photo" data-href="/gallery/<%= photo._id %>?_method=DELETE" >Delete Photo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </section>
    <!-- Photos end -->
    
    <!-- Photo Fullsize Modal Start -->
    <div id="photo-modal" class="modal">
        <div id="close">X</div>
        <img id="photoModalImg">
